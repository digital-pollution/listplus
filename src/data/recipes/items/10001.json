  "instructions": [
    {
      "step": "Step 1.",
      "content": "Slice the chicken breast into bitesize pieces\nChop the eggplant and carrots into small pieces.\nFinely chop the red chili peppers."
    },
    {
      "step": "Step 2.",
      "content": "Add cooking oil to the wok, on low heat add green curry paste and coconut cream\nBring to a simmer and stir continuously for 1-2 minutes."
    },
    {
      "step": "Step 3.",
      "content": "Add sliced chicken and stir vigorously until the chicken is cooked."
    },
    {
      "step": "Step 4.",
      "content": "Increase to high heat. Add water, fish sauce and sugar."
    },
    {
      "step": "Step 5.",
      "content": "Add the eggplant, carrots and kaffir lime leaves.\nKeep boiling until the eggplant is cooked."
    },
    {
      "step": "Step 6.",
      "content": "Add the sweet basil leaves and chopped red chili peppers."
    },
    {
      "step": "Step 7.",
      "content": "Serve with steamed or sticky rice."
    }
  ]
